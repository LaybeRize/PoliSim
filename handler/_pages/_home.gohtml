{{define "page"}}
    {{- /*gotype: PoliSim/handler.HomePage */ -}}
    <body id="page-body">
        {{template "header" .NavInfo}}
        {{if .NavInfo.Account.Exists}}
            <p>{{/*_home*/}}Herzlich willkommen, {{.Account.Name}}</p>
            <button hx-post="/logout" hx-target="#page-body">{{/*_home*/}}Abmelden</button>
        {{else}}
            <form hx-post="/login" hx-target="#page-body" style="width: var(--standard-small-width);">
                <label for="username">{{/*_home*/}}Nutzername</label>
                <input id="username" name="username" type="text">
                <label for="password">{{/*_home*/}}Passwort</label>
                <input id="password" name="password" type="password">
                <button type="submit">{{/*_home*/}}Einloggen</button>
            </form>
        {{end}}
        {{template "message" .}}
        $$home-page$$
    </body>
{{end}}